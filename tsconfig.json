{
  "compilerOptions": {
    "target": "es6",
    "module": "amd",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types/express",
      "node_modules/@types/mongoose",
      "node_modules/@types/lodash"
    ]
  },
  "include": ["src"]
}
